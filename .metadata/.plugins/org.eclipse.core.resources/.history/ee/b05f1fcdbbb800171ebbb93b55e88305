
public class Programa {
	public static void main(String[] args) {
		
		Funcionario f1 = new Funcionario();
		f1.setDataDeEntrada("10/01/2012");
		f1.setDepartamento("Vendas");
		f1.setEstaNaEmpresa(true);
		f1.setNome("Eduardo");
		f1.setRg("45");
		f1.setSalario(1300.0);
		f1.calculaSalario();
		
		Gerente g1 = new Gerente();
		g1.departamento = "Vendas";
		g1.dataDeEntrada = "03/02/1990";
		g1.estaNaEmpresa = true;
		g1.nome = "Eric";
		g1.salario = 3500.0;
		g1.rg = "30.476.907-1";
		g1.setLogin("eric");
		g1.setSenha("123");
		
		System.out.println("Data de entrada: " + f1.getDataDeEntrada());
		System.out.println(f1.getDepartamento());
		System.out.println(f1.getNome());
		System.out.println(f1.getRg());
		System.out.println(f1.getSalario());
		System.out.println(f1.isEstaNaEmpresa());

		System.out.println("////////////////////////////////////");
		g1.autentica("eric", "123");
		System.out.println(g1.getDataDeEntrada());
		System.out.println(g1.getDepartamento());
		System.out.println(g1.getNome());
		System.out.println(g1.getRg());
		System.out.println(g1.getSalario());
		System.out.println(g1.isEstaNaEmpresa());
		System.out.println(g1.calculaGanhoAnual());

		
	}

}
